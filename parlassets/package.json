{
  "name": "parlassets",
  "version": "1.0.0",
  "description": "Assets for frontend for Parlameter",
  "main": "index.js",
  "scripts": {
    "sass": "PATH=$(npm bin):$PATH node-sass scss/style.scss scss/style.css && PATH=$(npm bin):$PATH postcss -u autoprefixer -o scss/style.css scss/style.css",
    "sass-win": "node-sass scss/style.scss scss/style.css && postcss -u autoprefixer -o scss/style.css scss/style.css",
    "sass-dev": "PATH=$(npm bin):$PATH node-sass scss/style.scss scss/style.css -w",
    "sass-dev-win": "node-sass scss/style.scss scss/style.css -w",
    "vue-dev": "cross-env NODE_ENV=development webpack-dev-server --open --inline --hot",
    "vue-build": "cross-env NODE_ENV=production webpack --progress --hide-modules",
    "build": "npm run sass; npm run vue-build; gulp build;"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/muki/parlassets.git"
  },
  "author": "",
  "license": "",
  "bugs": {
    "url": "https://github.com/muki/parlassets/issues"
  },
  "homepage": "https://github.com/muki/parlassets#readme",
  "dependencies": {
    "autoprefixer": "^6.7.7",
    "babel-core": "^6.24.0",
    "babel-loader": "^6.4.1",
    "babel-preset-es2015": "^6.24.0",
    "cross-env": "^4.0.0",
    "css-loader": "^0.28.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.1.3",
    "eslint-plugin-html": "^2.0.1",
    "eslint-plugin-import": "^2.2.0",
    "file-loader": "^0.11.1",
    "node-sass": "^4.5.2",
    "postcss-cli": "^3.1.1",
    "stylelint": "^7.10.1",
    "stylelint-config-standard": "^16.0.0",
    "vue": "2.2.6",
    "vue-loader": "11.3.4",
    "vue-template-compiler": "^2.2.6",
    "webpack": "^2.3.3",
    "webpack-dev-server": "^2.4.2"
  },
  "babel": {
    "presets": [
      [
        "es2015",
        {
          "modules": false
        }
      ]
    ]
  },
  "eslintConfig": {
    "plugins": [
      "html"
    ],
    "extends": "airbnb-base"
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "devDependencies": {
    "gulp": "3.9.1",
    "gulp-clean-css": "3.0.4",
    "gulp-rename": "1.2.2",
    "gulp-uglify": "2.1.2",
    "pump": "1.0.2"
  }
}
