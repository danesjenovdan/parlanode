<script>
    $('.modal [data-dismiss="modal"]').on('click', function() {
        var target = $(this).data("next-target");
        if (target) {
            $(this).closest('.modal').data("next-target", target);
        }
    });
    $('.modal').on('hidden.bs.modal', function (e) {
        var target = $(this).data("next-target");
        $(this).data("next-target", "");
        if (target) {
            $(target).modal('show');
        }
    });
</script>
