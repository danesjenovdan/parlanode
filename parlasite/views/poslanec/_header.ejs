<div class="member-container">
  <div class="row header text-center">
    <div class="col-lg-12">
      <img src="<%- mp.image || (config.urls.cdn + '/img/people/square/null.png') %>" class="media-object img-circle session-logo person-logo" style="border: 2px solid <%= mp.group && mp.group.color || '#333' %>;">

      <h1><%- mp.honorific_prefix %> <%- mp.name %> <%- mp.honorific_suffix %></h1>

      <div class="member-extra-info">
      <% if (mp.group) { %>
        <h2><a href="/<%- sm.party.base %>/<%- mp.group.slug || '' %>"><%= mp.group.name ? mp.group.name : mp.group.acronym ? mp.group.acronym : '' %></a></h2>
      <% } else { %>
        <h2><span><%- i18n('general.unaffiliated') %></span></h2>
      <% } %>
        <h3><%- mp.group && mp.group.is_in_coalition ? i18n('general.coalition') : '&nbsp;' %></h3>
      </div>

      <% if (typeof activeTab !== 'undefined') { %>
      <div class="group-container-menu">
        <ul class="clearfix">
          <li><a href="/<%- sm.member.base %>/<%- mp.slug %>/<%- sm.member.overview %>" class="<%- activeTab === 'pregled' ? 'active' : '' %> nav-icon nav-icon-overview"><%- i18n('general.overview') %></a></li>
          <li><a href="/<%- sm.member.base %>/<%- mp.slug %>/<%- sm.member.votings %>" class="<%- activeTab === 'glasovanja' ? 'active' : '' %> nav-icon nav-icon-votings"><%-i18n('general.voting') %></a></li>
          <li><a href="/<%- sm.member.base %>/<%- mp.slug %>/<%- sm.member.speeches %>" class="<%- activeTab === 'govori' ? 'active' : '' %> nav-icon nav-icon-speeches"><%- i18n('general.speeches') %></a></li>
        </ul>
      </div>
      <% } %>
    </div>
  </div>
</div>
