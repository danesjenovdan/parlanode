<% include /partials/header.ejs %>

<style>
    .pm-poslanec-nav {
        width: 100%;
        text-align: center;
    }

    .pm-poslanec-nav .pm-poslanec-nav-btn {

        line-height: 50px;
        width: 120px;
        margin-left: 10px;
        display: inline-block;
        text-transform: uppercase;
        border: 1px solid #999;
        color: #555;

    }

    .pm-poslanec-nav .pm-poslanec-nav-btn-selected {
        background-color: #009cdd;
        color: #fff;
        border: 0px;
    }

    .row-container .col-half:nth-child(2){

        margin-left: 44px;

    }

    .col-container {
        float: left;
    }

    .col-half {

        width: 47.5%;

    }

    .col-block {
        width: 100%;
    }

    .page-title{

        text-align: center;
        font-weight: 300;
        font-size:24px;
        margin-bottom:20px;

    }

</style>

<h1 class="page-title"><%- mp.name %></h1>

<div class="pm-poslanec-nav">
    <a href="/p/<%- slug %>/pregled">
        <div class="pm-poslanec-nav-btn pm-poslanec-nav-btn-selected">Pregled</div>
    </a>
    <a href="/p/<%- slug %>/glasovanja">
        <div class="pm-poslanec-nav-btn">Glasovanja</div>
    </a>
    <a href="/p/<%- slug %>/govori">
        <div class="pm-poslanec-nav-btn">Govori</div>
    </a>
</div>

<div class="page-container">
    <div class="row-container">
        <div class="col-container col-half">
            <%- views.osnovneInformacije %>
        </div>
        <div class="col-container col-half">
            <%- views.zadnjeAktivnosti %>
        </div>
    </div>
    <div class="row-container">
        <div class="col-container col-block">
            <%- views.kompas %>
        </div>
    </div>
    <div class="row-container">
        <div class="col-container col-half">
            <%- views.izracunanaPrisotnost %>
        </div>
        <div class="col-container col-half">
            <%- views.clanstva %>
        </div>
    </div>
</div>

<% include /partials/footer.ejs %>
