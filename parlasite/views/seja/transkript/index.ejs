<% include ../../partials/header.ejs %>

<div class="row header text-center">

    <div class="col-md-12">

        <% if(typeof sesData !== "undefined" ){%>
        <div class="row">
            <div class="text-center">
                <div class="media-object img-circle session-logo">
                    <b>S</b>
                </div>
            </div>
            <div class="">
                <h1>
                    <%-sesData.name%>
                </h1>
                <font class="date">
                    <%-sesData.date%>
                </font>
                <br/>
                <font>
                    podatki objavljeni: <%-sesData.date%>
                </font>
            </div>
        </div>
        <% } %>
    </div>

    <% if(sesData.type != 'kolegij'){ %>

    <div class="col-md-12">
        <div class="session_transcript_menu">

            <ul class="clearfix">
                <li>
                    <a href="/seja/glasovanja/<%- params.id %>">
                        Glasovanja
                    </a>
                </li>
                <li>
                    <a href="/seja/transkript/<%- params.id %>" class="active">
                        Transkript
                    </a>
                </li>
                <li>
                    <a href="/seja/prisotnost/<%- params.id %>">
                        Prisotnost
                    </a>
                </li>
            </ul>


        </div>

    </div>
    <% } %>


</div>


<div class="col-md-12 ">
    <%- views.besedeKiSoZaznamovaleSejo %>
</div>
<div class="col-md-12">
    <div class="row" id="speeches">
    </div>
</div>

<script>
    $.getJSON('https://https://analize.parlameter.si/v1/s/getSpeechesIDsOfSession/' + <%= sesData.id %>, function(r) {
        for (i in r.data) {
            $.get('https://glej.parlameter.si/s/speech/' + r.data[i], function(HTML) {
                $('#speeches').append('<div class="col-md-12">' + HTML + '</div>');
            });
        }
    });
</script>

<% include ../../partials/footer.ejs %>